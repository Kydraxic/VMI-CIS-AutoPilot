<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_add_funds"
        android:name="com.example.myapplication.ui.AddFundsFragment"
        android:label="Add Funds"
        tools:layout="@layout/fragment_add_funds" />

    <fragment
        android:id="@+id/nav_withdrawal"
        android:name="com.example.myapplication.ui.withdrawFundsFragment"
        android:label="Withdraw Funds"
        tools:layout="@layout/fragment_withdraw_funds" />

    <activity
        android:id="@+id/nav_signout"
        android:name="com.example.myapplication.ui.LoginActivity"
        android:label="Withdraw Funds"
        tools:layout="@layout/activity_login" />
</navigation>