<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginBottom="93dp"
		app:layout_constraintBottom_toTopOf="@+id/withdrawal_textView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/autopilotlogo" />

	<TextView
		android:id="@+id/withdrawal_textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="48dp"
		android:layout_marginBottom="45dp"
		android:text="Enter Password to Withdrawal or Sell"
		android:textSize="20dp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/password_edit_withdrawalFunds"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/password_edit_withdrawalFunds" />

	<Button
		android:id="@+id/sell_Button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="50dp"
		android:layout_marginLeft="50dp"
		android:layout_marginBottom="278dp"
		android:text="Sell"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/password_edit_withdrawalFunds" />

	<EditText
		android:id="@+id/password_edit_withdrawalFunds"
		android:layout_width="90dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="160dp"
		android:layout_marginLeft="160dp"
		android:layout_marginEnd="160dp"
		android:layout_marginRight="160dp"
		android:layout_marginBottom="44dp"
		android:text="Password"
		app:layout_constraintBottom_toTopOf="@+id/sell_Button"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/withdrawal_textView" />

	<TextView
		android:id="@+id/amount_withdrawn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/sell_Button" />

	<Button
		android:id="@+id/withdraw_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="108dp"
		android:layout_marginLeft="108dp"
		android:layout_marginTop="44dp"
		android:layout_marginEnd="50dp"
		android:layout_marginRight="50dp"
		android:layout_marginBottom="278dp"
		android:text="withdraw"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/sell_Button"
		app:layout_constraintTop_toBottomOf="@+id/password_edit_withdrawalFunds" />

</androidx.constraintlayout.widget.ConstraintLayout>